<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aerolinea</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .vuelo {
            display: flex;
            width: 100%;
            justify-content: space-between;
            align-items: stretch;
        }

            .vuelo .precio-select {
                display: flex;
                justify-content: flex-end;
                align-content: center;
                align-items: center;
                color: #28a745;
                font-size: 30px;
                font-weight: 500;
            }

        .ruta-vuelo {
            display: flex;
        }

        .ruta-ciudad {
            display: flex;
            justify-content: center;
            align-content: center;
            flex-wrap: wrap;
        }

            .ruta-ciudad > div {
                flex: 1 0 100%;
                display: flex;
                justify-content: center;
            }

            .ruta-ciudad .vuelo-cod-iata {
                color: #673ab7;
                font-weight: 500;
                font-size: 26px;
            }

            .ruta-ciudad .vuelo-hora {
                font-weight: 500;
                font-size: 16px;
            }

            .ruta-ciudad .vuelo-ciudad {
                font-weight: 300;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Aerolinea</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Aerolinea - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
